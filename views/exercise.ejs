<%- include('partials/header'); -%>



  <div class="exerciseContainer">
    <div class="exercisesList">
      <% newExercises.forEach(function (exercise) { %>
            <a href="exercise/<%= exercise.name %>" >
              <%= exercise.name %>
            </a>
      <% }) %>
    </div>
    <div class="exerciseButtons">
      <div class="editButtons">
        <% newExercises.forEach(function (exercise) { %>
              <button type="button" name="button" class="editBtn " id="<%= exercise.name %>">Edit</button>
        <% }) %>
      </div>
      <div class="deleteButtons">
        <% newExercises.forEach(function (exercise) { %>
              <button type="button" name="button" class="deleteBtn" id="<%= exercise.name %>">Delete</button>
        <% }) %>
      </div>
    </div>

  </div>
  <button type="button" name="button" class="largeBtn" id="exerciseBtn">+</button>


<!-- Modal window
------------------------------------------------------------------------------>

<div class="modal" id="modal">
  <div class="modalHeader">
    <div class="tittle" id="tittle">Add Exercise</div>
    <button class="closeButton" id="modalCloseBtn">&times;</button>
  </div>
  <div class="modalBody" id="modalBody">
    <form action="/exercise" method="post" >
      <input type="text" name="exerciseName" placeholder="Exercise Name" required>
      <button type="submit" name="button" class="smallBtn" id="modalPlus">+</button>
    </form>
  </div>
</div>
<div id="overlay"></div>

<script type="text/javascript" src="/js/script-modal.js"></script>

<%- include('partials/footer'); -%>
