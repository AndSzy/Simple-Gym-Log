<%- include('partials/header'); -%>


<div class="moreContainer">
  <div class="calendar">
    <div class="left">
      <h2>Calendar</h2>
    </div>
    <div class="right">
      <button type="button" name="button" class="largeBtn" id="calendar"><i class="far fa-calendar-alt"></i></button>
    </div>
  </div>
  <div class="timer">
    <div class="left">
      <h2>Timer</h2>
    </div>
    <div class="right">
      <button type="button" name="button" class="largeBtn" id="timer"><i class="fas fa-stopwatch"></i></button>
    </div>
  </div>

  <div class="bodyWeight">
    <div class="left">
      <h2>Body Weight</h2>
    </div>
    <div class="right">
      <button type="button" name="button" class="largeBtn" id="bodyWeight"><i class="fas fa-weight"></i></button>
    </div>
  </div>

  <script>

    let calendar = document.getElementById('calendar');
    calendar.addEventListener('click', function () {
      window.open("/more/calendar", "_self");
    });


    let timer = document.getElementById('timer');
    timer.addEventListener('click', function () {
      window.open("/more/timer", "_self");
    });

    let bodyWeight = document.getElementById('bodyWeight');
    bodyWeight.addEventListener('click', function () {
      window.open("/more/bodyweight", "_self");
    });


  </script>

</div>

<%- include('partials/footer'); -%>
